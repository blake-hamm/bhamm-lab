apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: apps-{{ env }}
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://git.bhamm-lab.com/bhamm/bhamm-lab.git
    targetRevision: {{ GITEA_REF_NAME }}
    path: kubernetes/manifests/apps
    directory:
      recurse: true
      include: "{**all.yaml,**{{ env }}.yaml}"
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    syncOptions:
      - ApplyOutOfSyncOnly=true
    automated:
      prune: true
      selfHeal: true
