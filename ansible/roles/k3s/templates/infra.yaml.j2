apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: infra-base
  namespace: default
  annotations:
    argocd.argoproj.io/sync-wave: "-1000"
spec:
  project: default
  source:
    repoURL: https://github.com/blake-hamm/bhamm-lab.git
    path: kubernetes/infra
    targetRevision: {{ argocd_branch }}
    directory:
      recurse: true
      include: "*/base/*"
  destination:
    server: "https://kubernetes.default.svc"
    namespace: default
  syncPolicy:
    syncOptions:
      - ApplyOutOfSyncOnly=true
    automated:
      prune: true
      selfHeal: true
