# The loopback network interface
auto lo
iface lo inet loopback

# Management Interface (2.5Gb) - VLAN 20
auto eno1
iface eno1 inet manual
    mtu 1500

auto eno1.20
iface eno1.20 inet static
    address 10.0.20.11/24
    netmask 255.255.255.0
    gateway 10.0.20.1
    dns-nameservers 10.0.20.1 1.1.1.1 1.0.0.1
    vlan-raw-device eno1
    mtu 1500

# Proxmox/K3s Bridge (10Gb) - enp5s0f0
auto enp5s0f0
iface enp5s0f0 inet manual
    mtu 9000

auto vmbr0
iface vmbr0 inet manual
    bridge-ports enp5s0f0
    bridge-stp off
    bridge-fd 0
    bridge-maxwait 0
    mtu 9000

# Ceph Interface (10Gb) - VLAN 50
auto enp5s0f1
iface enp5s0f1 inet manual
    mtu 9000

auto enp5s0f1.50
iface enp5s0f1.50 inet static
    address 10.0.50.11/24
    netmask 255.255.255.0
    vlan-raw-device enp5s0f1
    mtu 9000
