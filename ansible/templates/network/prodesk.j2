# The loopback network interface
auto lo
iface lo inet loopback

# Management Interface (1Gb) - VLAN 20
auto eno1
iface eno1 inet manual
    mtu 1500

auto eno1.20
iface eno1.20 inet static
    address 10.0.20.13/24
    gateway 10.0.20.1
    vlan-raw-device eno1
    mtu 1500

# Proxmox/K3s Bridge (10Gb) - enp1s0f0
auto enp1s0f0
iface enp1s0f0 inet manual
    mtu 9000

auto vmbr0
iface vmbr0 inet manual
    bridge-ports enp1s0f0
    bridge-stp off
    bridge-fd 0
    bridge-maxwait 0
    mtu 9000

# Ceph Interface (10Gb) - VLAN 50
auto enp1s0f1
iface enp1s0f1 inet manual
    mtu 9000

auto enp1s0f1.50
iface enp1s0f1.50 inet static
    address 10.0.50.13/24
    vlan-raw-device enp1s0f1
    mtu 9000
